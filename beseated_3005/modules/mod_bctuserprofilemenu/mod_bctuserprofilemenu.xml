<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site"
	method="upgrade">
	<name>MOD_BCTUSERPROFILEMENU</name>
	<author>Tailored Solution</author>
	<creationDate>Feb 2015</creationDate>
	<copyright>Copyright (C)2014 J!Mini . All rights unreserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>ijoomer@gmail.com</authorEmail>
	<authorUrl>http://joomlamini.com</authorUrl>
	<version>3.2.0</version>
	<description>MOD_BCTUSERPROFILEMENU_XML_DESC</description>
	<files>
		<filename module="mod_bctuserprofilemenu">mod_bctuserprofilemenu.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>assets</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_bctuserprofilemenu.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_bctuserprofilemenu.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset
				name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="Module Class Suffix"
					description="Module Class Suffix" />

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="Caching"
					description="Select whether to cache the content of this module or not">
					<option
						value="1">Use global</option>
					<option
						value="0">No caching</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="Cache Time"
					description="The time before the module is recached" />

				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
