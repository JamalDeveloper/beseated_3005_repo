<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="message_id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="message ASC">FILTER_MESSAGE_TITLE_ASC</option>
			<option value="message DESC">FILTER_MESSAGE_TITLE_DESC</option>
			<option value="city ASC">FILTER_MESSAGE_CITY_ASC</option>
			<option value="city DESC">FILTER_MESSAGE_CITY_DESC</option>
			<option value="created ASC">FILTER_MESSAGE_SENT_DATE_ASC</option>
			<option value="created DESC">FILTER_MESSAGE_SENT_DATE_DESC</option>
			<option value="subject ASC">FILTER_MESSAGE_SUBJECT_ASC</option>
			<option value="subject DESC">FILTER_MESSAGE_SUBJECT_DESC</option>
			<option value="element_name ASC">FILTER_MESSAGE_COMPANY_NAME_ASC</option>
			<option value="element_name DESC">FILTER_MESSAGE_COMPANY_NAME_DESC</option>
			<option value="people_count ASC">FILTER_MESSAGE_PEOPLE_COUNT_ASC</option>
			<option value="people_count DESC">FILTER_MESSAGE_PEOPLE_COUNT_DESC</option>

		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="10"
			label="COM_BESEATED_BOOKING_REQUESTS_LIST_LIMIT"
			description="COM_BESEATED_BOOKING_REQUESTS_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
