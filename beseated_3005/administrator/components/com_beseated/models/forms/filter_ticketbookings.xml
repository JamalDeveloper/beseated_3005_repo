<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.premium_id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="full_name ASC">BOOKING_REQUEST_FILTER_BY_FULL_NAME_ASC</option>
			<option value="full_name DESC">BOOKING_REQUEST_FILTER_BY_FULL_NAME_DESC</option>
			<option value="event_name ASC">FILTER_EVENT_NAME_ASC</option>
			<option value="event_name DESC">FILTER_EVENT_NAME_DESC</option>
			<option value="event_date ASC">FILTER_EVENT_DATE_ASC</option>
			<option value="event_date DESC">FILTER_EVENT_DATE_DESC</option>
			<option value="event_time ASC">FILTER_EVENT_TIME_ASC</option>
			<option value="event_time DESC">FILTER_EVENT_TIME_DESC</option>
			<option value="total_ticket ASC">FILTER_EVENT_TOTAL_TICKET_ASC</option>
			<option value="total_ticket DESC">FILTER_EVENT_TOTAL_TICKET_DESC</option>

		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="10"
			label="COM_BESEATED_BOOKING_REQUESTS_LIST_LIMIT"
			description="COM_BESEATED_BOOKING_REQUESTS_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
