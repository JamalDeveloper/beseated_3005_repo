<?xml version="1.0" encoding="utf-8"?>
  <form>
    <fieldset name="basic">
        <field
            id="venue_table_booking_id"
            name="venue_table_booking_id"
            type="hidden" />

        <field
            id="currency_sign"
            name="currency_sign"
            default="1"
            type="hidden" />

        <field
            id="time_stamp"
            name="time_stamp"
            type="hidden" />


        <field
                name="user_id"
                type="Userlist"
                label="COM_BESEATED_USER_NAME"
                description="COM_BESEATED_USER_NAME"
            />

        <field
                name="venue_id"
                type="Venuelist"
                label="COM_BESEATED_VENUE_NAME_LABEL"
                description="COM_BESEATED_VENUE_NAME_LABEL"
            />




         <field
            id="male_guest"
            name="male_guest"
            type="text"
            required="required"
            label="COM_BESEATED_VENUE_TABLE_BOOKING_TOTAL_MALE"
            hint="COM_BESEATED_VENUE_TABLE_BOOKING_TOTAL_MALE"
             />

         <field
            id="female_guest"
            name="female_guest"
            type="text"
            required="required"
            label="COM_BESEATED_VENUE_TABLE_BOOKING_TOTAL_FEMALE"
            hint="COM_BESEATED_VENUE_TABLE_BOOKING_TOTAL_FEMALE"
             />

        <field
            id="bill_post_amount"
            name="bill_post_amount"
            type="text"
            required="required"
            label="COM_BESEATED_VENUE_TABLE_BOOKING_TOTAL_BILL_POST_AMOUNT"
            hint="COM_BESEATED_VENUE_TABLE_BOOKING_TOTAL_BILL_POST_AMOUNT"
             />

            <field name="booking_date"
                    type="calendar"
                    label="COM_BESEATED_CHAUFFEUR_BOOKING_BOOKING_DATE"
                    description=""
                    default="NOW"
                    format="%d-%m-%Y" />

            <field
            id="booking_time"
            name="booking_time"
            type="text"
            default=""
            size="5"
            label="COM_BESEATED_CHAUFFEUR_BOOKING_BOOKING_TIME"
            hint="COM_BESEATED_CHAUFFEUR_BOOKING_BOOKING_TIME"
             />

    </fieldset>
</form>

