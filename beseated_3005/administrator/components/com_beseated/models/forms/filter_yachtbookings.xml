<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.premium_id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="booking_date ASC">YACHT_FILTER_BOOKIN_DATE_ASC</option>
			<option value="booking_date DESC">YACHT_FILTER_BOOKIN_DATE_DESC</option>
			<option value="total_hours ASC">YACHT_FILTER_BOOKIN_HOURS_ASC</option>
			<option value="total_hours DESC">YACHT_FILTER_BOOKIN_HOURS_DESC</option>
			<option value="service_name ASC">YACHT_FILTER_BOOKIN_SERVICE_NAME_ASC</option>
			<option value="service_name DESC">YACHT_FILTER_BOOKIN_SERVICE_NAME_DESC</option>
			<option value="full_name ASC">YACHT_FILTER_BOOKIN_FULL_NAME_ASC</option>
			<option value="full_name DESC">YACHT_FILTER_BOOKIN_FULL_NAME_DESC</option>
			<option value="yacht_name ASC">BOOKING_REQUEST_FILTER_BY_ELEMENT_NAME_ASC</option>
			<option value="yacht_name DESC">BOOKING_REQUEST_FILTER_BY_ELEMENT_NAME_DESC</option>
			<option value="total_price ASC">YACHT_FILTER_BOOKIN_TOTAL_PRICE_ASC</option>
			<option value="total_price DESC">YACHT_FILTER_BOOKIN_TOTAL_PRICE_DESC</option>
			<option value="dock ASC">YACHT_FILTER_BOOKIN_DOCK_LOCATION_ASC</option>
			<option value="dock DESC">YACHT_FILTER_BOOKIN_DOCK_LOCATION_DESC</option>
			<option value="booking_currency_code ASC">YACHT_FILTER_BOOKIN_CURRENCY_CODE_ASC</option>
			<option value="booking_currency_code DESC">YACHT_FILTER_BOOKIN_CURRENCY_CODE_DESC</option>
			<option value="capacity ASC">YACHT_FILTER_BOOKIN_CAPACITY_ASC</option>
			<option value="capacity DESC">YACHT_FILTER_BOOKIN_CAPACITY_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="10"
			label="COM_BESEATED_YACHT_BOOKING_LIST_LIMIT"
			description="COM_BESEATED_YACHT_BOOKING_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
