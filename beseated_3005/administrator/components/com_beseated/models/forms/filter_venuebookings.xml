<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.premium_id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="booking_date ASC">VENUE_FILTER_BOOKIN_DATE_ASC</option>
			<option value="booking_date DESC">VENUE_FILTER_BOOKIN_DATE_DESC</option>
			<option value="total_hours ASC">VENUE_FILTER_BOOKIN_HOURS_ASC</option>
			<option value="total_hours DESC">VENUE_FILTER_BOOKIN_HOURS_DESC</option>
			<option value="table_name ASC">VENUE_FILTER_BOOKIN_SERVICE_NAME_ASC</option>
			<option value="table_name DESC">VENUE_FILTER_BOOKIN_SERVICE_NAME_DESC</option>
			<option value="full_name ASC">VENUE_FILTER_BOOKIN_FULL_NAME_ASC</option>
			<option value="full_name DESC">VENUE_FILTER_BOOKIN_FULL_NAME_DESC</option>
			<option value="booking_currency_code ASC">VENUE_FILTER_BOOKIN_CURRENCY_CODE_ASC</option>
			<option value="booking_currency_code DESC">VENUE_FILTER_BOOKIN_CURRENCY_CODE_DESC</option>
			<option value="venue_name ASC">FILTER_VENUE_NAME_ASC</option>
			<option value="venue_name DESC">FILTER_VENUE_NAME_DESC</option>
			<option value="total_guest ASC">FILTER_VENUE_TOTAL_GUEST_ASC</option>
			<option value="total_guest DESC">FILTER_VENUE_TOTAL_GUEST_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="10"
			label="COM_BESEATED_PREMIUM_TABLE_LIST_LIMIT"
			description="COM_BESEATED_PREMIUM_TABLE_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
