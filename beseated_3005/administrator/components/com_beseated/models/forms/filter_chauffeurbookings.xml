<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.premium_id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="booking_date ASC">CHAUFFEUR_FILTER_BOOKIN_DATE_ASC</option>
			<option value="booking_date DESC">CHAUFFEUR_FILTER_BOOKIN_DATE_DESC</option>
			<option value="total_hours ASC">CHAUFFEUR_FILTER_BOOKIN_HOURS_ASC</option>
			<option value="total_hours DESC">CHAUFFEUR_FILTER_BOOKIN_HOURS_DESC</option>
			<option value="service_type ASC">CHAUFFEUR_FILTER_BOOKIN_SERVICE_NAME_ASC</option>
			<option value="service_type DESC">CHAUFFEUR_FILTER_BOOKIN_SERVICE_NAME_DESC</option>
			<option value="full_name ASC">CHAUFFEUR_FILTER_BOOKIN_FULL_NAME_ASC</option>
			<option value="full_name DESC">CHAUFFEUR_FILTER_BOOKIN_FULL_NAME_DESC</option>
			<option value="chauffeur_name ASC">BOOKING_REQUEST_FILTER_BY_ELEMENT_NAME_ASC</option>
			<option value="chauffeur_name DESC">BOOKING_REQUEST_FILTER_BY_ELEMENT_NAME_DESC</option>
			<option value="total_price ASC">CHAUFFEUR_FILTER_BOOKIN_TOTAL_PRICE_ASC</option>
			<option value="total_price DESC">CHAUFFEUR_FILTER_BOOKIN_TOTAL_PRICE_DESC</option>
			<option value="capacity ASC">CHAUFFEUR_FILTER_CAPACITY_ASC</option>
			<option value="capacity DESC">CHAUFFEUR_FILTER_CAPACITY_DESC</option>
			<option value="pickup_location ASC">CHAUFFEUR_FILTER_PICKUP_LOCATION_ASC</option>
			<option value="pickup_location DESC">CHAUFFEUR_FILTER_PICKUP_LOCATION_DESC</option>
			<option value="dropoff_location ASC">CHAUFFEUR_FILTER_DROPOFF_LOCATION_ASC</option>
			<option value="dropoff_location DESC">CHAUFFEUR_FILTER_DROPOFF_LOCATION_DESC</option>
			<option value="booking_currency_code ASC">CHAUFFEUR_FILTER_CURRUNCY_CODE_ASC</option>
			<option value="booking_currency_code DESC">CHAUFFEUR_FILTER_CURRUNCY_CODE_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="10"
			label="COM_BESEATED_CHAUFFEUR_BOOKING_LIST_LIMIT"
			description="COM_BESEATED_CHAUFFEUR_BOOKING_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
